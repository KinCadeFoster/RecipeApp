<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="StyleTitle12">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="StyleTitle20">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/deep_violet_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">@dimen/padding_10</item>
        <item name="android:paddingHorizontal">@dimen/padding_0</item>
        <item name="cornerRadius">@dimen/common_8dp</item>
    </style>

    <style name="tVHeader">
        <item name="android:textAppearance">@style/StyleTitle20</item>
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="itemCategoryHeader">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">@dimen/padding_8</item>
        <item name="android:paddingHorizontal">@dimen/padding_8</item>
        <item name="android:textColor">@color/deep_violet_color</item>
    </style>

    <style name="StyleRecipe20">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/purple</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="StyleRecipe14">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>